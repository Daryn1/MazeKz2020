@model FilteredHouseDto
    <div class="card" style="margin-top: 20px;">
        <article class="card-body">
            <form asp-controller="Housing" asp-action="Houses">
                <div class="form-group">
                    <label for="filterStreet">Улица</label>
                    <input asp-for="@Model.Street" type="text" class="form-control" id="filterStreet" placeholder="Введите улицу...">
                </div>
                <div class="form-group">
                    <label for="filterPrice">Стоимость</label>
                    <select asp-for="@Model.Price" class="form-control" id="filterPrice">
                        <option value="0">Выберите стоимость недвижимости...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="filterType">Тип</label>
                    <select asp-for="@Model.Type" asp-items="@new SelectList(Enum.GetNames(typeof(HouseType)))" class="form-control" id="filterType">
                        <option value="none">Выберите тип недвижимости...</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Найти</button>
                </div>
            </form>
            </article>
        </div>
            <script>
                $.get(
                    '/housing/houses/maxprice'
                ).done(function (maxPrice) {
                    $.get('/housing/houses/minprice').done(function (minPrice) {
                        let price = minPrice;
                        while (price < maxPrice) {
                            $('#filterPrice').append('<option value="' + Math.round(Number(price + price + 1000000)/2) + '">' + price + ' - ' + Number(price + 1000000) + 'KZT</option>');
                            price += 1000000;
                        }
                    });
                });
            </script>
